<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:locservice="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.locservice.ui.controls.CustomTextView
        android:id="@+id/textViewMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="16dp"
        android:textColor="@color/black"
        android:text="@string/str_choose_time_info"
        android:textSize="15sp"
        locservice:font="fonts/RobotoRegular.ttf" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <com.locservice.ui.controls.CustomNumberPicker
            android:id="@+id/numberPickerDay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:descendantFocusability="blocksDescendants"
            android:clickable="false"
            locservice:font="fonts/RobotoRegular.ttf"/>

        <com.locservice.ui.controls.CustomNumberPicker
            android:id="@+id/numberPickerHour"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:descendantFocusability="blocksDescendants"
            locservice:font="fonts/RobotoRegular.ttf" />

        <com.locservice.ui.controls.CustomTextView
            android:id="@+id/textViewTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center_horizontal"
            android:text=":"
            android:textColor="#000000"
            android:textSize="20sp"
            locservice:font="fonts/RobotoRegular.ttf" />

        <com.locservice.ui.controls.CustomNumberPicker
            android:id="@+id/numberPickerMinute"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants"
            locservice:font="fonts/RobotoRegular.ttf" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:orientation="horizontal">

        <com.locservice.ui.controls.CustomTextView
            android:id="@+id/textViewChoose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/drawable_white_selector"
            android:gravity="left"
            android:paddingBottom="16dp"
            android:paddingLeft="30dp"
            android:paddingTop="16dp"
            android:text="ВЫБРАТЬ"
            android:textColor="#ed5c3f"
            android:textSize="18sp"
            locservice:font="fonts/RobotoMedium.ttf" />

        <com.locservice.ui.controls.CustomTextView
            android:id="@+id/textViewCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/drawable_white_selector"
            android:gravity="right"
            android:paddingBottom="16dp"
            android:paddingRight="30dp"
            android:paddingTop="16dp"
            android:text="ОТМЕНА"
            android:singleLine="true"
            android:textColor="#ed5c3f"
            android:textSize="18sp"
            locservice:font="fonts/RobotoMedium.ttf" />

    </LinearLayout>

</LinearLayout>